<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/view_task_bin"

        android:layout_width="0dp"
        android:layout_height="60dp"

        android:padding="10dp"

        android:adjustViewBounds="true"
        android:scaleType="centerInside"

        android:src="@drawable/bin_icon"
        android:background="@color/red"

        android:layout_centerVertical="true"

        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/view_task_text"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"

        android:background="@color/white"

        android:maxLines="2"

        android:layout_toRightOf="@+id/view_task_bin"
        android:layout_toLeftOf="@+id/view_task_requeue"

        android:minHeight="80dp"

        android:textSize="18sp"
        android:textColor="@color/black"

        android:gravity="center"/>

    <ImageView
        android:id="@+id/view_task_requeue"

        android:layout_width="0dp"
        android:layout_height="60dp"

        android:padding="10dp"

        android:adjustViewBounds="true"
        android:scaleType="centerInside"

        android:src="@drawable/stack_icon"
        android:background="@color/green"

        android:layout_centerVertical="true"

        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/view_task_blur"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_centerInParent="true"

        android:visibility="invisible"/>

</RelativeLayout>